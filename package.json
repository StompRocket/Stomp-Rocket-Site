{
  "name": "sr-site",
  "version": "0.1.0",
  "description": "A wasm website for StompRocket written in rust",
  "main": "index.js",
  "scripts": {
    "fetch:blastoff": "curl https://blastoff.stomprocket.io/blastoff.scss > scss/blastoff.scss",
    "build:rs": "cargo web deploy --release",
    "build:scss": "node-sass --include-path scss scss/main.scss css/main.css",
    "build:css": "postcss --use autoprefixer -o static/main.css css/main.css",
    "build:style": "run-s build:scss build:css",
    "build:copy": "cp static/main.css docs/ && cp target/wasm32-unknown-unknown/release/{sr.wasm,sr.js} docs/ && cp static/index.html docs/",
    "build": "run-s restart:deploy build:rs fetch:blastoff build:style build:copy",
    "restart:deploy": "rm -rf docs && mkdir docs",
    "clean": "rm -rf docs",
    "prod": "run-s build serve",
    "serve": "serve -p 8080 docs",
    "watch:rs": "cargo web start --release",

    "start": "run-s build watch:rs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StompRocket/Stomp-Rocket-Site.git"
  },
  "author": "swissChili",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StompRocket/Stomp-Rocket-Site/issues"
  },
  "homepage": "https://github.com/StompRocket/Stomp-Rocket-Site#readme",
  "dependencies": {
    "autoprefixer": "^9.4.3",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.7",
    "postcss-cli": "^6.1.0",
    "serve": "^10.1.1"
  }
}
